<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:background="@color/white" android:padding="5dp"
    android:orientation="horizontal" android:layout_width="fill_parent">
    <TextView android:id="@+id/date"  android:textSize="12sp"  android:text="@string/action_settings"
			android:layout_width="fill_parent" android:layout_height="wrap_content"	android:textColor="#666666"
			android:layout_marginRight="10dip" android:layout_alignParentRight="true"/>
    <ImageView android:scaleType="fitXY"  android:layout_height="50dip" android:layout_width="50dip" android:contentDescription="@string/app_name"
			 android:id="@+id/newsImage" android:layout_alignParentLeft="true" android:layout_centerVertical="true"
			 android:layout_below="@+id/date" android:src="@drawable/ic_launcher">
		</ImageView>
		<TextView android:id="@+id/title"
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:textStyle="bold" android:text="@string/action_settings"
			android:shadowColor="#000000" android:shadowDx="0" android:textSize="16sp"
			android:shadowDy="0" android:layout_toRightOf="@+id/newsImage" 	android:textColor="#000000"
			android:layout_marginLeft="4dip" android:layout_below="@+id/date"></TextView>
		<TextView android:id="@+id/decription" android:textSize="14sp"  android:text="@string/action_settings"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textColor="#000000"	android:layout_below="@+id/newsImage" 
			android:layout_marginLeft="4dip"></TextView>

		<Button
		    android:id="@+id/goBtn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignRight="@+id/date"
		    android:layout_below="@+id/decription"
		    android:layout_marginTop="3dp"
		    android:text="@string/go_btn" />

</RelativeLayout>
